<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10dp"
            android:hint="Поиск"
            android:imeOptions="actionSearch"
            android:inputType="text" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10dp"
            android:text="Поиск" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp" >

        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/item_list_image_kombo2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/comb04" />

        <TextView
            android:id="@+id/item_list_title_kombo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Комбо за 3900 ₸"
            android:textColor="#E3E1E0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Кому-кому только одному. Маленькая пицца, закуска, напиток и соус. Цена комбо зависит от выбранных продуктов и может быть увеличена"
            android:textColor="#706D6B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_list_price_kombo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:text="3 900 тг."
            android:textColor="#E3462B"
            android:textSize="18sp" />

        <Button
            android:id="@+id/item_list_button_kombo2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F39468"
            android:text="3 900 тг."
            android:textColor="#E3462B"
            android:textSize="15sp" />



        <ImageView
            android:id="@+id/item_list_image_kombo1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/kombo1" />

        <TextView
            android:id="@+id/item_list_title_kombo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Комбо от Смешариков"
            android:textColor="#E3E1E0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_list_text_kombo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Одобрено героями мультфильма: маленькая пицца любого вкуса и набор юного садовода. Цена комбо зависит от выбранных пицц и может быть увеличена"
            android:textColor="#706D6B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_list_price_kombo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:text="2 300 тг."
            android:textColor="#E3462B"
            android:textSize="18sp" />

        <Button
            android:id="@+id/item_list_button_kombo1"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F39468"
            android:text="2 300 тг."
            android:textColor="#E3462B"
            android:textSize="15sp" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>